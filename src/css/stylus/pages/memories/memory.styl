.page
    &#birthday-memory, &#create-memory
        background Grey_light_1

        .page-content
            .date-title, .location-title, .contacts-title
                font-template(500, 20px, 24px)
                color Grey_dark_3
                padding 0px 20px

            .date-title
                flex-cont(row, space-between, center)
                padding-top 20px

                a
                    &.none
                        display none

            .note-title
                font-template(500, 20px, 24px)
                color Grey_dark_3

            .upload-title
                font-template(500, 20px, 24px)
                color Grey_dark_3
                padding 20px 20px 15px 20px

            .btns-cont
                padding 5px 0px 50px 0px

                &.add
                    padding-top 0px

                    .add-btn
                        height 50px
                        width 50px
                        box-shadow 0px 2px 4px rgba(0, 0, 0, 0.15), inset 0px 2px 0px blue_light, inset 0px -1.5px 0px blue_dark

                        i
                            font-size 35px

                &.create
                    padding 37px 0px

            .upload-cont
                flex-cont(column, unset, stretch)

                .btns-cont
                    .none
                        display none

            .progress-cont
                flex-cont(column, unset, stretch)
                padding 0px 10px

                .bar
                    margin 5px 0px

                    span.progressbar
                        background Grey_light_2
                        height 20px
                        border-radius 15px

                        span
                            background blue_light
                            border-radius 15px

                .desc
                    font-template(normal, 10px, 16px)
                    color Grey_dark_1
                    text-align center
                    margin 0px

            .ondemand-cont
                padding 18px 8px
                flex-cont(row, space-between, center)

                .ondemand
                    padding-left 20px
                    flex-cont(row, unset, center)

                    h1
                        margin 0px
                        font-template(normal, 18px, 16px)
                        color Grey_dark_2

                    a
                        margin-left 10px
                        flex-cont(row, center, center)

                        i
                            font-size 20px
                            color Grey_light_3

            .media-cont
                flex-cont(column, center, stretch)
                padding 20px 5px 15px 5px

                .cover
                    width 100%
                    height 170px
                    margin-bottom 34px
                    background Grey_light_2
                    background-image url('../static/img/cover_upload.png')
                    background-repeat no-repeat
                    background-position center
                    background-size 140px 107px
                    box-shadow 0px 2px 15px rgba(0, 0, 0, 0.05)
                    border-radius 8px
                    position relative

                    img
                        object-fit cover
                        width 100%
                        height 100%
                        border-radius 8px

                    a
                        display none

                    input.none
                        display none

                    &.edit
                        a
                            position absolute
                            top 5px
                            right 10px
                            flex-cont(row, center, center)
                            z-index 2

                            span
                                color blue_dark

                .medias
                    flex-cont(row, space-between, center)

                    .media
                        flex-cont(row, center, center)
                        height 70px
                        width 70px
                        background Grey_light_2
                        box-shadow inset 3.3px 4.3px 0px #e7e6e6, inset 0px -3.3px 0px #F7F7F7
                        border 0.7px solid white
                        border-radius 9.2px

                        span
                            font-size 24px
                            color Grey_light_3

                        &.none
                            display none

                    &.f_start
                        justify-content flex-start
                        flex-wrap wrap

                        .fill
                            border none
                            margin 9px 5px
                            position relative

                            .close
                                padding 3px
                                position absolute
                                right -10px
                                top -10px
                                border-radius 50%
                                background Grey_light_1
                                border 0.208333px solid #f5f5f5
                                color Grey_dark_2
                                box-shadow inset 0px 1px 0px #fdfdfd, inset 0px -1px 0px Grey_light_2
                                font-size 14px

                            img
                                object-fit contain
                                width 100%
                                height 100%
                                border-radius 9.2px

            .deliver-cont, .location-cont
                padding 10px 8px 0px 8px

                .date-btn, .location-btn
                    padding 5px 0px 25px 0px
                    margin 0px 12px 50px 12px
                    border-bottom 0.4px solid Grey_light_3

                    &.none
                        display none

                .date-btn
                    margin 0px 12px 20px 12px

                .deliver-info
                    padding 10px 19px 0px 19px
                    flex-cont(column, unset, stretch)

                    .footer-deliver
                        padding-top 15px
                        font-tmeplate(normal, 14px, 18px)
                        color Grey_dark_1
                        border-bottom 0.4px solid Grey_light_3

                    .info-cont
                        padding-bottom 10px

                        .date-info, .time-info
                            flex-cont(row, space-between, center)

                            p
                                font-template(500, 18px, 24px)
                                color Grey_dark_1
                                margin 5px 0px

                    &.none
                        display none

                .location-map
                    flex-cont(column, unset, stretch)

                    .map
                        height 310px
                        width auto
                        margin 0px -23px

                        .centerMarker
                            position absolute
                            background url('../static/img/Pluma_map_v2.png') no-repeat
                            background-size contain
                            top 50%
                            left 50%
                            z-index 1
                            margin-left -22px
                            margin-top -94px
                            height 94px
                            width 33px

                    .map-info
                        margin 20px 2px 40px 2px
                        flex-cont(row, space-between, flex-end)
                        border-bottom 0.5px solid Grey_light_3

                        .address
                            margin 0px 7px
                            flex-cont(column, flex-start, flex-start)

                            h1.title
                                margin 0px
                                font-template(500, 18px, 24px)
                                color Grey_dark_3

                            p.addr
                                margin 5px 0px
                                font-template(300, 14px, 16px)
                                color Grey_dark_2

                        .edit-btn.addr
                            min-width 30px
                            margin 0px 1px 5px 0px

                    &.none
                        display none

            .contacts-cont
                .contacts
                    padding 15px 5px
                    flex-cont(row, flex-start, center)
                    flex-wrap wrap

                    .person
                        margin 5px
                        position relative
                        width 70px
                        height 70px
                        background Grey_light_2
                        border-radius 50%
                        box-shadow inset 3px 4px 0px #e7e6e6, inset 0px -2.5px 0px Grey_light_1
                        background-image url('../static/img/Busto_grey.png')
                        background-repeat no-repeat
                        background-position center
                        background-size 28px

                        &.none, .none
                            display none

                        img
                            border-radius 50%
                            width 100%

                        .close
                            padding 3px
                            position absolute
                            right -3px
                            top 1px
                            border-radius 50%
                            background Grey_light_1
                            border 0.208333px solid #f5f5f5
                            color Grey_dark_2
                            box-shadow inset 0px 1px 0px #fdfdfd, inset 0px -1px 0px Grey_light_2
                            font-size 14px
