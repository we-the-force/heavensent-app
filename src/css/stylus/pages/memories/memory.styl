.page
    &#birthday-memory, &#create-memory
        background Grey_light_1

        .page-content
            .date-title, .location-title, .contacts-title
                font-template(500, 20px, 24px)
                color Grey_dark_3
                padding 0px 20px

            .note-title
                font-template(500, 20px, 24px)
                color Grey_dark_3

            .upload-title
                font-template(500, 20px, 24px)
                color Grey_dark_3
                padding 0px 20px

            .btns-cont
                padding 5px 0px 50px 0px

                &.add
                    padding-top 0px

                    .add-btn
                        height 50px
                        width 50px
                        box-shadow 0px 2px 4px rgba(0, 0, 0, 0.15), inset 0px 2px 0px blue_light, inset 0px -1.5px 0px blue_dark

                        i
                            font-size 35px

                &.create
                    padding 37px 0px

            .upload-cont
                flex-cont(column, unset, stretch)

                .ondemand-cont
                    padding 18px 8px
                    flex-cont(row, space-between, center)

                    .ondemand
                        padding-left 20px
                        flex-cont(row, unset, center)

                        h1
                            margin 0px
                            font-template(normal, 18px, 16px)
                            color Grey_dark_2

                        a
                            margin-left 10px
                            flex-cont(row, center, center)

                            i
                                font-size 20px
                                color Grey_light_3

            .progress-cont
                flex-cont(column, unset, stretch)
                padding 0px 10px

                .bar
                    margin 5px 0px

                    span.progressbar
                        background Grey_light_2
                        height 20px
                        border-radius 15px

                        span
                            background blue_light
                            border-radius 15px

                .desc
                    font-template(normal, 10px, 16px)
                    color Grey_dark_1
                    text-align center
                    margin 0px

            .media-cont
                flex-cont(column, center, stretch)
                padding 20px 10px 15px 10px

                .cover
                    width 100%
                    height 170px
                    margin-bottom 34px
                    background Grey_light_2
                    box-shadow 0px 2px 15px rgba(0, 0, 0, 0.05)
                    border-radius 8px
                    position relative

                    a
                        position absolute
                        top 0
                        right 10px
                        flex-cont(row, center, center)
                        z-index 2

                        span
                            color Grey_dark_3

                    &:after
                        content 'Cover'
                        position absolute
                        top 50%
                        left 50%
                        transform translate(-50%, -50%)
                        font-template(500, 14px, 24px)
                        color Grey_light_3
                        z-index 0

                .medias
                    flex-cont(row, space-between, center)

                    .media
                        flex-cont(row, center, center)
                        height 70px
                        width 70px
                        background Grey_light_2
                        box-shadow inset 3.3px 4.3px 0px #e7e6e6, inset 0px -3.3px 0px #F7F7F7
                        border 0.7px solid white
                        border-radius 9.2px

                        span
                            font-size 24px
                            color Grey_light_3

            .deliver-cont, .location-cont
                padding 10px 8px 0px 8px

                .date-btn, .location-btn
                    padding 5px 0px 25px 0px
                    margin 0px 12px 50px 12px
                    border-bottom 0.4px solid Grey_light_3
                    &.none
                        display none

            .contacts-cont
                .contacts
                    padding 15px 5px
                    flex-cont(row, flex-start, center)
                    flex-wrap wrap

                    .person
                        margin 5px
                        position relative
                        width 70px
                        height 70px
                        background Grey_light_2
                        border-radius 50%
                        box-shadow inset 3px 4px 0px #e7e6e6, inset 0px -2.5px 0px Grey_light_1
                        background-image url('../static/img/Busto_grey.png')
                        background-repeat no-repeat
                        background-position center
                        background-size 28px

                        .none
                            display none

                        img
                            border-radius 50%
                            width 100%

                        .close
                            padding 3px
                            position absolute
                            right -3px
                            top 1px
                            border-radius 50%
                            background Grey_light_1
                            border 0.208333px solid #f5f5f5
                            color Grey_dark_2
                            box-shadow inset 0px 1px 0px #fdfdfd, inset 0px -1px 0px Grey_light_2
                            font-size 14px
