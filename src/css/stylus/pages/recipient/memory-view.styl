.page
    &#view-memory
        background Grey_light_1

        .page-content
            .sqr_bck
                deg = -37.5deg

                &#sqr1
                    sqr(100px, deg)
                    top -80px
                    right 30px
                    z-index -1

                &#sqr2
                    sqr(400px, deg)
                    top -65px
                    right -385px
                    z-index -1

            .footer
                overflow hidden
                position absolute
                padding-top 350px
                //margin -335px -15px -15px -15px
                z-index -1
                bottom 0px
                right 0px
                width 100vw

                .sqr_bck
                    &#sqr3
                        sqr(310px, 60deg)
                        bottom -325px
                        right 170px
                        z-index -1

                    &#sqr4
                        sqr(500px, 60deg)
                        bottom -260px
                        right -350px
                        z-index -1

            .title
                margin 0px
                margin-bottom 15px
                text-align center
                font-template(500, 20px, 23px)
                color Grey_dark_3

            .cover
                width 95%
                height 170px
                box-shadow 0px 3.26923px 10.8974px rgba(0, 0, 0, 0.15)
                border-radius 8px
                margin 10px auto

                img
                    object-fit cover
                    width 100%
                    height 100%
                    border-radius 8px

            .desc
                text-align left
                font-template(normal, 14px, 16px)
                color Grey_dark_2
                margin 0px 20px

            .tabbar
                flex-cont(row, space-around, center)
                padding 22px 0px

            .tabs-animated-wrap
                height auto

                .tab
                    flex-cont(row, flex-start, flex-start)
                    flex-wrap wrap
                    height min-content

                    .item
                        width 25%

                        .image
                            width 100%
                            padding-top 100%
                            position relative

                            img
                                border 0.8px solid #FFFFFF
                                margin 5px
                                object-fit cover
                                border-radius 8px
                                position absolute
                                width calc(100% - 11.6px)
                                height calc(100% - 11.6px)
                                top 0
                                left 0