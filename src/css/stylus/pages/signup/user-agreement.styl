.page#user-agreement
    background Grey_light_1

    .page-content
        flex-cont(column, flex-start, unset)

        .footer 
            overflow hidden
            position relative
            padding-top 350px
            margin -350px -15px -15px -15px

            .sqr_bck
                deg = -40deg
                &#sqr1
                    sqr(290px, deg)
                    bottom -85px
                    left -235px
                    z-index -1

                &#sqr2
                    sqr(290px, deg)
                    bottom 50px
                    right -225px
                    z-index -1


        .header-cont
            flex-grow 0

            h1
                color Grey_dark_2

        .text-cont
            flex-grow 1

            p
                font-template(normal, 16px, 19px)
                margin 20px 25px
                text-align justify

        .btns-cont
            flex-grow 1
            padding: 30px 0px