.page
    &#fundations-single
        background Grey_light_1

        .cover-cont
            width 100%
            height 30vh
            box-shadow 0px 3px 10px rgba(0, 0, 0, 0.15)
            margin 25px auto

            img
                object-fit cover
                width 100%
                height 100%
                border-radius 8px

        .desc-cont
            .desc-title
                font-template(500, 20px, 23px)
                text-align center
                color Grey_dark_3
                margin 10px 0px

            .desc
                font-template(normal, 16px, 19px)
                text-align left
                color Grey_dark_2

        .packages-swiper
            width 100%
            overflow visible
            padding 60px 0px

            .swiper-slide
                width auto !important
        
        .btns-cont
            &#pay-method
                .button
                    font-template(normal, 14px ,22px)
                margin 20px auto 65px auto