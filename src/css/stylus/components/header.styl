.header-cont
    padding 10px 15px
    width 100%
    box-sizing border-box

    .header
        flex-cont(row, space-between, center)

        h1.title
            font-template(500, 20px, 23px)
            color Grey_dark_3
            white-space normal
            text-align center
            width 100%
            max-height 28px

        .none
            height 30px
            width 30px

        .title-sub
            max-width 70%
            flex-cont(column, center, center)

            h1, p
                margin 0px

            h1.title
                font-template(500, 24px, 28px)
                color Grey_dark_3

            p.subtitle
                font-template(normal, 14px, 16px)
                color Grey_light_3

        .avatar-fab
            height 50px
            width 50px
            display flex
            

            img
                width 100%
                border-radius 50%
                -webkit-box-sizing border-box 
                -moz-box-sizing border-box 
                box-sizing border-box
                border 2px solid white
                background-image url('../../../static/img/Busto.png')
                filter drop-shadow(0px 2px 4px rgba(0, 0, 0, 0.15))
                background-size cover
                background-position 50% 50%

                
                
