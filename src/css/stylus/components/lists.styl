.list
    &.media-list
        .item-content
            .item-media
                img
                    border-radius 50%
                    -webkit-box-sizing border-box 
                    -moz-box-sizing border-box 
                    box-sizing border-box
                    border 2px solid white
                    background-image url('../../../static/img/Busto.png')
                    filter drop-shadow(0px 2px 4px rgba(0, 0, 0, 0.15))
                    background-size cover
                    background-position 50% 50%

            .item-title-row
                &:before
                    content none

                .item-title
                    font-template(500, 18px, 24px)
                    color Grey_dark_3

            .item-text
                font-template(normal, 16px, 24px)
                color Grey_dark_3