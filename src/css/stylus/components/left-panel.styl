.panel-left
    padding 15px

    .profile
        margin 15px 0px 30px 0px
        flex-cont(row, flex-start, center)

        .avatar
            flex-grow 0
            margin 0px 12px 0px 5px
            height 55px
            width 55px
            display flex

            img
                width 100%
                border-radius 50%

        .text
            flex-grow 1
            flex-cont(column, center, flex-start)

            .name-cont
                width 100%
                flex-cont(row, space-between, center)

                h1.name
                    font-template(500, 18px, 21px)
                    color Grey_dark_3
                    margin 0px

                span
                    color Grey_light_3
                    transform rotate(-10deg)

            p
                margin 0px
                font-template(normal, 12px, 14px)
                color Grey_dark_3