.inputs
    margin 0px

    .item-input
        padding 0px 0px 0px 8px

        .item-checkbox
            i
                background Grey_light_2
                border 0.5px solid #FEFEFE
                box-shadow inset 1px 2px 0px #e7e6e6, inset 0px -2px 0px #f5f5f5
                box-sizing border-box
                border-radius 50%
                margin 0px 12px
                width 24px
                height 24px

                &:after
                    content ''
                    border-radius 50%
                    width 16px
                    height 16px
                    background Grey_light_1
                    position absolute
                    top 50%
                    left 50%
                    transform translate(-50%, -50%)

            input[type='checkbox']:checked ~ .icon-checkbox
                background blue
                border-color #fefefe
                box-shadow inset 0px -2px 0px blue_dark, inset 1.5px 1.5px 0px #76BDE5

            .item-title
                font-template(500, 18px, 21px)
                color Grey_dark_2

        .item-inner
            flex-direction unset
            padding 15px 8px 15px 0px

        .item-input-wrap
            height 46px
            display flex
            background Grey_light_2
            border-radius 22px
            align-items center
            padding 0px 17px
            box-shadow inset 4px 3px 0px #e7e6e6, inset -2px -2px 0px #f5f5f5

            input
                font-template(300, 16px, 24px)
                color Grey_dark_2 !important

                &::-webkit-inner-spin-button, &::-webkit-calendar-picker-indicator
                    opacity 0
                    -webkit-appearance none

                &.grey
                    filter grayscale(1)
                &.pop-deliver-inputs
                    height 26px
                    line-height 26px
            i
                color #d2d2d2
                font-size 20px

            a
                flex-cont(row, center, center)

                .info
                    font-size 24px

            .show
                color #d2d2d2
                font-template(normal, 14px, 16px)
                cursor pointer

            &:after
                content none !important

            &.textarea
                height auto
                min-height 100px
                align-items flex-start
                border-radius 11px
                border 1px solid #DDDDDD
                flex-cont(column, inherit, stretch)
                box-shadow unset

                textarea
                    padding 9px 0px 0px 0px
                    font-template(normal, 14px, 24px)
                    color Grey_dark_1

                span
                    text-align right
                    color Grey_light_3
                    font-template(500, 12px, 24px)

        &.right
            justify-content flex-end

        &.with-label
            flex-cont(column, unset, unset)

            label
                font-template(500, 18px, 21px)
                color Grey_dark_3
                padding 0px 17px

            .item-inner
                padding-top 5px

        &.two-inputs
            .item-inner
                min-width unset

.upload-cont
    .upload-img
        position inherit
        margin-left auto
        margin-right auto
        height 178px
        width 178px
        box-sizing border-box
        box-shadow inset -0.1px -5.5px 0px #f5f5f5, inset 6px 9px 0px #e7e6e6
        //border 1.85417px solid #FEFEFE
        border-radius 50%
        background-color Grey_light_2
        background-repeat no-repeat
        background-image url('../../../static/img/img.png')
        background-position center

        .photo
            width 178px
            height 178px
            border-radius 50%
            -webkit-mask-image -webkit-radial-gradient(circle, white 100%, black 100%)

.searchbar
    background unset
    height 100%

    .searchbar-inner
        padding 15px 8px
        height unset

        .searchbar-input-wrap
            height 46px
            display flex
            background Grey_light_2
            border-radius 22px
            align-items center
            padding 0px 17px
            box-shadow inset 4px 3px 0px #e7e6e6, inset -2px -2px 0px #f5f5f5

            input
                font-template(normal, 18px, 24px)
                color #757575
                background unset
                padding 0px 48px 0px 36px
                height var(--f7-input-height)

.toggle
    width 48px
    height 24px

    .toggle-icon
        width 48px
        height 25px
        border 0.5px solid #FDFDFD

        &:before
            content ''
            position absolute
            width 100%
            height 100%
            z-index -1
            border-radius 14px
            transform rotate(180deg)
            background linear-gradient(180deg, #FFFFFF -91.67%, rgba(255, 255, 255, 0) 30.65%), radial-gradient(293.75% 293.75% at 55.91% -125%, #F0F0F0 44.57%, #F0F0F0 65.35%, rgba(255, 255, 255, 0) 100%), #C4C4C4
            transition all 0s ease-in-out

        &:after
            height 16px
            width 16px !important
            top 3px
            left 4px

    input[type='checkbox']:checked + .toggle-icon
        background none

        &:before
            content ''
            position absolute
            width 100%
            height 100%
            z-index -1
            border-radius 14px
            background blue

        &:after
            transform translateX(24px) !important
            background Grey_light_1 !important

.ios
    .item-input-wrap
        margin 0px

    .item-input-wrap::after, .item-inner::after
        content none

    .item-input-error-message
        position absolute
        margin-bottom 0px
        margin-top 0px
        left 17px
        top 100%
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        width 100%

    .toggle
        input[type='checkbox']:checked + .toggle-icon
            background none

            &:before
                transform scale(1)
                top 0px
                left 0px