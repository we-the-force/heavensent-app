.inputs
    margin 0px

    .item-input
        padding 0px 0px 0px 8px

        .item-inner
            flex-direction unset
            padding 20px 8px 20px 0px

        .item-input-wrap
            height 46px
            display flex
            background Grey_light_2
            border-radius 22px
            align-items center
            padding 0px 17px
            box-shadow inset 4px 3px 0px #e7e6e6, inset -2px -2px 0px #f5f5f5

            input
                font-input(300, 16px, 24px)
                color Grey_dark_2

            i
                color #d2d2d2
                font-size 20px

            &:after
                content none !important

.ios
    .item-input-wrap::after, .item-inner::after
        content none

    .item-input-error-message
        position absolute
        margin-bottom 0px
        margin-top 0px
        bottom -18px
        left 30px